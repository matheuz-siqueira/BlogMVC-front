@model GetPostViewModel

@{
    ViewData["Title"] = "Edit Post"; 
}

<h3>@ViewData["Title"]</h3>

<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div> 
    <input type="hidden" asp-for="Id">

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <div>
            <input asp-for="Title" type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Subtitle" class="control-label"></label>
        <div>
            <input asp-for="Subtitle" type="text" class="form-control" />
        </div>
    </div>

     <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <div>
            <input asp-for="Content" type="text" class="form-control" />
        </div>
    </div>

    <div class="d-flex flex-row justify-content-end">
        <div class="p-2">
            <button type="submit" class="btn btn-outline-danger">Edit</button>
        </div>
        <div class="p-2">
            <a asp-action="Index" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</form>