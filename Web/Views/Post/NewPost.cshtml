@model CreatePostViewModel 

@{
    ViewData["Title"] = "To Write"; 
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="col-md-8">
        <form asp-action="NewPost" method="post" class="form-horizontal">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <div>
                    <input asp-for="Title" class="form-control">
                </div>
            </div>

             <div class="form-group">
                <label asp-for="Subtitle" class="control-label"></label>
                <div>
                    <input asp-for="Subtitle" class="form-control">
                </div>
            </div>

             <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <div>
                    <input asp-for="Content" class="form-control">
                </div>
            </div>

            <div class="form-group mt-2" style="padding-top:10px">
                <div class="col-md-offset col-md-10">
                    <button class="btn">
                        <img src="~/images/apply.png">
                    </button>
                    <a asp-action="Index" class="btn btn-outline-dark">Back</a>
                </div>
            </div>

        </form>
    </div>
</div>